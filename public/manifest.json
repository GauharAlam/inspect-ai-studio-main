{
  "manifest_version": 3,
  "name": "AI CSS Inspector",
  "version": "1.0",
  "description": "Inspect CSS properties on any webpage.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "Toggle CSS Inspector",
    "default_icon": {
      "16": "icons/icon-default.png",
      "48": "icons/icon-default.png",
      "128": "icons/icon-default.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon-default.png",
    "48": "icons/icon-default.png",
    "128": "icons/icon-default.png"
  },
  "web_accessible_resources": [
    {
      "resources": [ "inspector.html", "assets/*" ],
      "matches": [ "<all_urls>" ]
    }
  ]
}