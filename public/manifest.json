{
  "manifest_version": 3,
  "name": "AI CSS Inspector",
  "version": "1.0",
  "description": "A Chrome extension that revolutionizes web design with AI-powered CSS inspection and intelligent design optimization.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "Toggle AI CSS Inspector",
    "default_icon": {
      "16": "icons/icon-default.png"
    },
    "default_popup": "inspector.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ],
  "icons": {
    "16": "icons/icon-default.png",
    "48": "icons/icon-default.png",
    "128": "icons/icon-default.png"
  }
}